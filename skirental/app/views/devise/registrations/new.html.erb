<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label 'Email*' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label 'Clave*' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> (minimo 6 caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label 'Confirmar Clave*' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>

  <div class="field">
    <%= f.label 'Apellido Paterno' %>
    <%= f.text_field :apellidopaterno %>
  </div>

  <div class="field">
    <%= f.label 'Apellido Materno' %>
    <%= f.text_field :apellidomaterno %>
  </div>


  <div class="field">
    <%= f.label :edad %>
    <%= f.number_field :edad %>
  </div>

  <div class="field">
    <%= f.label :peso %>
    <%= f.number_field :peso %>
  </div>

  <div class="field">
    <%= f.label :altura %>
    <%= f.number_field :altura %>
  </div>

  <div class="field">
    <%= f.label :talla %>
    <%= f.text_field :talla %>
  </div>

  <div class="field">
    <%= f.label "Nivel" %>
    <%= f.number_field :experience, :min => 1, :max => 3 %>
  </div>

  <div class="field">
    <%= f.hidden_field :admin, :value => true %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>

<p>
  *Obligatorio
</p>
