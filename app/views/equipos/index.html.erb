<div class="container">
  <h1>Equipos</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Equipo</th>
          <th>Detalles</th>
          <th>Precio</th>
          <th>Foto</th>
          <th>Stock</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @equipos.each do |equipo| %>
          <tr>
            <td><%= equipo.name %></td>
            <td><%= equipo.description %></td>
            <td><%= equipo.price %></td>
            <td><%= equipo.picture %></td>
            <td><%= equipo.stock %></td>
            <% if params[:nroarr].present? %>
              <td><%= link_to 'Mostrar', equipo_path(equipo, :na => Arriendo.find(params[:nroarr]).id) %></td>
            <% else %>
              <td><%= link_to 'Mostrar', equipo_path(equipo) %></td>
            <% end %>
            <% if user_signed_in? %>
              <% if current_user.admin %>
                  <td><%= link_to 'Editar', edit_equipo_path(equipo) %></td>
                  <td><%= link_to 'Eliminar', equipo, method: :delete, data: { confirm: 'Seguro?' } %></td>
                <% end %>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>
<% if user_signed_in? %>
  <% if current_user.admin %>
    <%= link_to 'Nuevo Equipo', new_equipo_path %>
  <% end %>
<% end %>
