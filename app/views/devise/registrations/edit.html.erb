<table class="container-fluid">

    <td style="padding-left: 90px; vertical-align:top;">
      <h2>Editar usuario</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field" style="padding-top:8px">
          <%= f.label 'Email' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field" style="padding-top:8px">
          <%= f.label 'Clave' %> <i>(En blanco si no la cambias)</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> caracteres minimo</em>
          <% end %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label 'Confirmar Clave' %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label :nombre %>
          <%= f.text_field :nombre %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label "Apellido Paterno" %>
          <%= f.text_field :apellidopaterno %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label "Apellido Materno" %>
          <%= f.text_field :apellidomaterno %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label "Fecha de nacimiento" %>
          <%= f.date_select :nac, {order: [:day, :month, :year], prompt: {day: 'Dia', month: 'Mes', year: 'Año'}, start_year: Date.today.year-60, end_year: Date.today.year}, :required => true %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label :peso %>
          <%= f.number_field :peso, :min => 1 %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label :altura %>
          <%= f.number_field :altura, :min => 1 %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label "Nivel" %>
          <%= f.number_field :experience, :min => 1, :max => 3 %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label 'Talla de bota' %>
          <%= f.text_field :talla, :min => 1 %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label 'Talla de parka' %>
          <%= f.number_field :talla_parka, :min => 1 %>
        </div>

        <div class="field" style="padding-top:8px">
          <%= f.label 'Talla de pantalón' %>
          <%= f.number_field :talla_pantalon, :min => 1 %>
        </div>

        <br>
        </br>

        <div class="field" style="padding-top:8px">
          <%= f.label "Clave Actual" %>
          <%= f.password_field :current_password, autocomplete: "off" %>
        </div>

        <div class="actions" style="padding-top:8px; padding-bottom:10px;">
          <%= f.submit "Actualizar" %>
        </div>

      <% end %>

    </td>

    <td style="padding-left: 400px; vertical-align:top;">
      <h2>Unir Arriendo a tu cuenta</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field" style="padding-top:10px">
            <%= f.label 'Código de reserva' %>
            <%= f.text_field :linker %>
          </div>


          <div class="field" style="padding-top:10px">
            <%= f.label "Clave Actual" %><br />
            <%= f.password_field :current_password, autocomplete: "off" %>
          </div>

          <div class="actions" style="padding-top:10px">
            <%= f.submit "Agregar" %>
          </div>
          <br>
          </br>
          <br>
          </br>
          <br>
          </br>

            <h2  style="padding-bottom:10px">Cancelar mi cuenta</h2>

            <p><%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Seguro?" }, method: :delete %></p>

        <% end %>
    </td>

</table>
