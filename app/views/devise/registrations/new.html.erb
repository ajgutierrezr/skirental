<h1>Registrarse</h1>

<br>
</br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.text_field :nombre, placeholder: "Nombre" %>
    <%= f.text_field :apellidopaterno, placeholder: "Apellido Paterno" %>
    <%= f.text_field :apellidomaterno , placeholder: "Apellido Materno"%>
  </div>

  <div class="field" style="padding-top:4px">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", size: "68" %>
  </div>

  <div class="field" style="padding-top:4px">
    <% if @minimum_password_length %>
    <% @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Clave (minimo 6 caracteres)", size: "68" %>
  </div>

  <div class="field" style="padding-top:4px">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar clave", size: "68"  %>
  </div>

  <br>
  </br>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
