<div class="container">
  <h1>Registrarse</h2>

  <br>
  </br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <div class="field">
      <%= f.text_field :nombre, placeholder: "Nombre" %>
      <%= f.text_field :apellidopaterno, placeholder: "Apellido Paterno" %>
      <%= f.text_field :apellidomaterno , placeholder: "Apellido Materno"%>
    </div>

    <div class="field" style="padding-top:8px">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", size: "68" %>
    </div>

    <div class="field" style="padding-top:8px">
      <% if @minimum_password_length %>
      <% @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Clave (mÃ­nimo 6 caracteres)", size: "68" %>
    </div>

    <div class="field" style="padding-top:8px">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar clave", size: "68"  %>
    </div>

    <div class="field" style="padding-top:8px">
      <%= f.text_field :document, placeholder: "Documento de identidad", size: "68" %>
    </div>

    <div class="field" style="padding-top:8px">
      <%= f.label "Fecha de nacimiento" %>
      <%= f.date_select :nac, {order: [:day, :month, :year], prompt: {day: 'Dia', month: 'Mes', year: 'AÃ±o'}, start_year: Date.today.year - 80, end_year: Date.today.year}, :required => true %>
    </div>

    <div class="actions" style="padding-top:8px; padding-bottom: 10px;">
      <%= f.submit "Registrarse" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
