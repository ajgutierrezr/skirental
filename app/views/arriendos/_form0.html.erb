<%= form_for(arriendo) do |f| %>
  <% if arriendo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(arriendo.errors.count, "error") %> prohibited this arriendo from being saved:</h2>

      <ul>
      <% arriendo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if user_signed_in? %>

    <div class="field">
      <%= f.label 'Talla de bota' %>
      <%= f.number_field :talla, :value => current_user.talla, :min => 1 %>
    </div>

    <div class="field">
      <%= f.label :altura %>
      <%= f.number_field :altura, :value => current_user.altura, :min => 1 %>
    </div>

    <div class="field">
      <%= f.label "Fecha de uso" %>
      <%= f.date_select :fecha, {order: [:day, :month, :year], prompt: {day: 'Dia', month: 'Mes', year: 'Año'}, start_year: Date.today.year, end_year: Date.today.year+5}, :required => true %>
    </div>
    <div class="field">
      <%= f.label :peso %>
      <%= f.number_field :peso, :value => current_user.peso, :min => 1 %>
    </div>

    <div class="field">
      <%= f.label :nombre %>
      <%= f.text_field :nombre, :value => current_user.nombre %>
    </div>

    <div class="field">
      <%= f.label 'Apellido Paterno' %>
      <%= f.text_field :apellidop, :value => current_user.apellidopaterno %>
    </div>

    <div class="field">
      <%= f.label 'Apellido Materno' %>
      <%= f.text_field :apellidom, :value => current_user.apellidomaterno %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% else %>

    <div class="field">
      <%= f.label 'Talla de bota'%>
      <%= f.number_field :talla, :min => 1 %>
    </div>

    <div class="field">
      <%= f.label :altura %>
