<%= form_for(contact) do |f| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if user_signed_in? %>

    <div class="field">
      <p><%= f.label "Email" %></p>
      <%= f.text_field :email, :value => current_user.email %>
    </div>
    <div class="field">
      <p><%= f.label "Escribenos!" %></p>
      <%= f.text_area :message %>
    </div>

    <div class="field">
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% else %>

    <div class="field">
      <p><%= f.label "Email" %></p>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <p><%= f.label "Escribenos!" %></p>
      <%= f.text_area :message %>
    </div>

    <div class="actions" style="padding-top:10px; padding-bottom:10px;">
      <%= f.submit 'Enviar'%>
    </div>
  <% end %>
<% end %>
